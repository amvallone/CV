

@article{honoresCollaborateNotCompete,
	title = {Collaborate but not compete? {Gender}, homophily, and the productivity-citation gap in inventor networks},
	year = {2025},
	volume = {0},
	issn = {1043-8599},
	shorttitle = {Collaborate but not compete?},
	url = {https://doi.org/10.1080/10438599.2025.2581589},
	doi = {10.1080/10438599.2025.2581589},
	abstract = {As scientific collaboration becomes increasingly global and complex, understanding the network mechanisms underlying gender disparities in innovation is essential. While prior research has often examined single disciplines or national contexts, this study integrates social network analysis and regression modeling to explore how gender, homophily, and network position interact to shape inventive outcomes. Using a 30-year panel of 3,871,017 U.S. patents (1990–2019) and 2,631,166 inventors, we distinguish between star inventors – those in the top productivity and citation percentiles – and non-star inventors to assess whether network advantages operate uniformly across performance strata. Results reveal three key patterns. First, women occupy less central positions and experience productivity gaps in aggregate models. Second, even with star status, top-performing women receive fewer citations than men, indicating that exceptional output does not offset systemic disadvantage. When network–gender interactions are introduced, the female–star coefficient loses significance, suggesting that the observed productivity premium among female stars stems primarily from positional advantages rather than star status itself. Third, men’s networks exhibit stronger homophily, whereas women rely on heterophilic ties – beneficial for productivity but less so for visibility. These findings extend theories of cumulative advantage, showing that structural capital alone cannot neutralize inequities in innovation systems.},
	number = {0},
	urldate = {2025-11-11},
	journal = {Economics of Innovation and New Technology},
	author = {Honores, Guillermo and Pinto, Pablo E. and Vallone, Andrés},
	note = {Publisher: Routledge
\_eprint: https://doi.org/10.1080/10438599.2025.2581589},
	keywords = {Gender gap, homophily, inventor networks, patents},
	pages = {1--24},
}


@article{vasquezBrownSeaweedsFishery2024,
	title = {Brown seaweeds fishery and copper mining production: {Two} distant economic industries connected by socioecological impacts in {Northern} {Chile}},
	volume = {165},
	issn = {0308-597X},
	shorttitle = {Brown seaweeds fishery and copper mining production},
	url = {https://www.sciencedirect.com/science/article/pii/S0308597X24001891},
	doi = {10.1016/j.marpol.2024.106191},
	abstract = {Northern Chile is the scenario of two main activities from a social and economic point of view the: brown seaweeds fishery and cooper mining industry. Chilean brown seaweeds of economic importance, commonly known as kelps, constitute a multi-specific fishery with a workforce of 15,000 people. Four species of kelps are harvested from natural populations by artisanal fishers and exported to world markets as raw material for alginate extraction. On the other hand, copper mining production, contributes 36 \% of GDP and it is the major Chilean export commodity. Due to the non-existence of entry barriers to seaweed extraction, this activity has become the sink for unemployment in northern Chile mainly from mining activity. In this context, our results show that when the price of copper is in a downward cycle, it negatively affects the abundance of brown seaweeds, due to the mobility of the workforce to the coastline, increasing the illegal harvest of these marine resources. In contrast, the upward cycle of copper decreases the harvesting pressure, removing illegal harvesters from the coastline and returning them to a mining industry and its suppliers with better wages. These drivers would generate a temporary window for recovery and restoration of brown algae populations, as well as the numerous ecosystem services provided by these engineering organisms.},
	urldate = {2025-11-11},
	journal = {Marine Policy},
	author = {Vásquez, Julio A. and Morales, Cristian and Vallone, Andrés},
	month = jul,
	year = {2024},
	keywords = {Artisanal fishers, Business cycles, Coastal restoration, Kelp, Mobility of workforce},
	pages = {106191},
	file = {ScienceDirect Snapshot:/Users/avallone/Zotero/storage/XVTY8INB/S0308597X24001891.html:text/html},
}

@incollection{ValloneChasco2024,
  author    = {Vallone, A. and Chasco, C.},
  title     = {Modelos Econométricos Espaciales},
  booktitle = {Fundamentos de ciencia de datos con R},
  editor    = {Fernandez-Avilés, G. and Montero, J.M.},
  year      = {2024},
  publisher = {McGraw Hill},
  isbn      = {8448636287},
abstract = {El capítulo explica cómo la econometría espacial permite analizar fenómenos que dependen de la ubicación geográfica.  La existencia de dependencia espacial rompe los supuestos clásicos y exige modelos que incorporen el espacio. Se introduce la noción de autocorrelación espacial, positiva cuando áreas similares se agrupan y negativa cuando se rodean valores distintos. Para medirla se usan matrices de vecindad y de pesos espaciales, construidas por contigüidad o distancia. Con ellas se calculan retardos espaciales y se aplican indicadores como el I de Moran. El capítulo describe modelos clave: SAR, SEM, SDM y SLX, cada uno con formas distintas de capturar la influencia espacial. También se revisan pruebas de diagnóstico y métodos de estimación como máxima verosimilitud y enfoques bayesianos. En síntesis, se ofrece un marco práctico para incorporar la dimensión espacial en el análisis económico.},
}

@article{ayouba2025spatio,
  title={The spatio-temporal dynamics of pesticide use: a global exploratory analysis},
  author={Ayouba, Kassoum and Vallone, Andres},
  journal={Journal of Environmental Planning and Management},
  volume={68},
  number={4},
  pages={866--886},
  year={2023},
  publisher={Taylor \& Francis},
  abstract={We utilize exploratory techniques to identify patterns in pesticide use spatial and temporal dimensions. Using data on 149 countries from 1993 to 2020, we find that some countries with low pesticide use are “catching-up” slightly. From a Markov chain analysis, we also note that the distribution of pesticide use per hectare is characterized by a low inter-class mobility, more pronounced in the head and tail of the distribution. This suggests a lock-in phenomenon once “unsustainable” agricultural systems are adopted. We complement this temporal analysis by exploring the role of “proximity” between countries in the use of pesticides and its dynamics. Three definitions of proximity are considered. The first is geographical, the second and third are based on crops produced at the country level and on countries’ GDP per capita respectively. Our results suggest that countries’ economic development explains more pesticide use than their geographic proximity or their crop similarity.},
  doi = {https://doi.org/10.1080/09640568.2023.2274284},
}


