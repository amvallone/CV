@article{pintoDynamicsPatentabilityCollaborativeness2017,
	title = {The dynamics of patentability and collaborativeness in {Chile}: {An} analysis of patenting activity between 1989 and 2013},
	volume = {49},
	copyright = {All rights reserved},
	issn = {0172-2190},
	doi = {https://doi.org/10.1016/j.wpi.2017.05.004},
	journal = {World Patent Information},
	author = {Pinto, Pablo E. and Vallone, Andres and Honores, Guillermo and González, Horacio},
	month = jun,
	year = {2017},
	pages = {52--65},
	abstract = {This paper analyzes patenting activity in Chile between 1989 and 2013, focusing on patentability dynamics and research collaboration. Using a dataset of invention patents granted by the Chilean National Institute of Industrial Property (INAPI), the study examines patent origins, technological specialization, and grant lags. Results show that patenting in Chile is highly concentrated among large foreign companies, with domestic contributions increasing but still modest. Universities account for a very small share of patents, reflecting limited science-industry interaction. Patent grant lags are long—averaging nearly seven years—but shortened after Chile’s accession to the Patent Cooperation Treaty in 2005. Social network analysis reveals scarce collaboration, with joint patents representing only a minor fraction of total activity. Overall, Chile’s patent ecosystem appears fragmented, poorly connected, and dominated by non-resident entities, highlighting structural weaknesses in innovation and collaboration. The findings underscore the need for stronger policies to foster domestic patenting capacity and encourage partnerships between universities, local firms, and international corporations.},
}

@article{ramirezModeloFlexiblePara2014,
	title = {Un modelo flexible para la simulación de distribución de ciudades},
	volume = {22},
	copyright = {All rights reserved},
	issn = {0718-3305},
	url = {https://scielo.conicyt.cl/scielo.php?script=sci_abstract&pid=S0718-33052014000300007&lng=es&nrm=iso&tlng=es},
	doi = {10.4067/S0718-33052014000300007},
	number = {3},
	urldate = {2019-11-16},
	journal = {Ingeniare. Revista chilena de ingeniería},
	author = {Ramírez, Pablo and Leger, Paul and Vallone, Andrés},
	month = sep,
	year = {2014},
	pages = {351--362},
	abstract = {The fulfillment of the Zipfs law is widely recognized in urban economics literature. Indeed, its coefficient is used as a measure of spatial concentration of a population. Whereas the concentration excess has problems associated with social welfare due to the existence of regional disparities and the congestion in some cities, the dispersion does not take advantage of, for example, the benefits of reducing costs of production generated by economies of scale.
Several studies have been performed in order to give an explanation to the fulfillment of Zipfs law, where the top-down models, that force the fulfillment of Zipfs law, have dominated the literature. Some proposals have attempted to explain the fulfillment of Zipf using cellular automata. These bottom-up proposals generate the distribution and sizes of cities in an emergent way. However, these models are not flexible and extensible, therefore, these proposals cannot be adapted to different geographical areas.
This paper proposes an initial implementation of a flexible and extensible model based on cellular automata, called CityCA, which tries to explain the Zipf coefficient. CityCA was evaluated and adapted to a real scenario, Chile. The simulation results were as expected, since they show that the ratio is closer to Zipf over-concentration than the dispersion, as in reality. With this model and implementation, urban economists do not require advanced programming knowledge, since CityCA already integrates specific knowledge.},
}








